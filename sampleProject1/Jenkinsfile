pipeline {
    agent any
    environment {
        // Use your Jenkins credential ID for Docker Hub login.
        DOCKERHUB_CREDENTIALS = credentials('pilcrow3000-dockerhub')
        // Build and tag the image with your Docker Hub username.
        IMAGE_NAME = "pilcrow3000/my-django-app:latest"
    }
    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from the repository.
                git url: 'https://github.com/SRCEM-AIM-Class-A/dakshBadhoniya-djangoApp.git', branch: 'main'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    // Build the Docker image using your Dockerfile.
                    dockerImage = docker.build("${env.IMAGE_NAME}", "-f sampleProject1/Dockerfile sampleProject1")
                }
            }
        }
        stage('Push Docker Image') {
            steps {
                script {
                    // Log in to Docker Hub and push the image.
                    docker.withRegistry('https://index.docker.io/v1/', DOCKERHUB_CREDENTIALS) {
                        dockerImage.push()
                    }
                }
            }
        }
    }
}
